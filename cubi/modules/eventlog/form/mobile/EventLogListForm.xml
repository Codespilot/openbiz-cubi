<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="EventLogListForm" Icon="icon_eventlog_l.gif" Class="EventLogForm" FormType="List" jsClass="jbForm" Title="Manage Event Log" Description="Manage application event logs. Event logs record the important activities, such as login, done by user" BizDataObj="eventlog.do.EventlogDO" EventName="EVENT_LOG" PageSize="10" DefaultForm="Y" TemplateEngine="Smarty" TemplateFile="system_content_listform.tpl.html" MessageFile="eventlogService.msg">
    <DataPanel>
        <Element Name="fld_Id" Class="Hidden" FieldName="Id" Label="Role Id" Hidden="Y"/>
        <Element Name="fld_user" Class="LabelText" FieldName="username" Label="Username" CssClass="ui-li-heading"/>
        <Element Name="fld_timestamp" Class="LabelText" FieldName="timestamp" Label="Timestamp" CssClass="ui-li-aside ui-li-desc"/>
        <Element Name="fld_message" Class="LabelText" FieldName="message" Label="Comment" CssClass="ui-li-desc"/>
        <Element Name="fld_listlink" Class="LabelText" FieldName="" Label="ListLink" Link="javascript:" Text=" " Style="white-space:normal; padding:0 0">
            <EventHandler Name="btn_message_onclick" Event="onclick" Function="SwitchForm(eventlog.form.EventLogDetailForm,{@:Elem[fld_Id].Value})"/>
        </Element>
   </DataPanel>
    <ActionPanel>
		<Element Name="btn_delete_all" Class="Button" Text="Clear" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="btn_delete_all_onclick" Event="onclick" Function="ClearLog()"  EventLogMsg="MSG_EVENT_LOG_CLEAR"/>
        </Element>        
    </ActionPanel> 
   <NavPanel>
        <Element Name="btn_first"  Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="First" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="Prev" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}" Style="font-size:13px;font-weight:bold">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="Next" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="Last" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel> 
    <SearchPanel>
        <Element Name="qry_username"  Class="InputText" FieldName="username" HTMLAttr="type=search"/>
        <Element Name="btn_dosearch" Class="Button" text="Go" DataRole="button">
            <EventHandler Name="search_onclick" Event="onclick" Function="RunSearch()"/>
        </Element>                 
    </SearchPanel>
</EasyForm>
