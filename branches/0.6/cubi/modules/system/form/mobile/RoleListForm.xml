<?xml version="1.0" encoding="UTF-8"?>
<EasyForm Name="RoleListForm" Icon="icon_roles.gif" Class="EasyForm" FormType="List" jsClass="jbForm" Title="Role Management" Description="Manage user roles in the application. Role is used in the application to control user permissions" BizDataObj="system.do.RoleDO" PageSize="10"  TemplateEngine="Smarty" TemplateFile="system_content_listform.tpl.html">
    <DataPanel>
        <Element Name="row_selections" Class="RowCheckbox" width="20"  Label="" FieldName="Id" CssClass="ui-li-icon"/>
        <Element Name="fld_Id" Class="RawData" FieldName="Id" Label="Role Id" Hidden="Y"/>
        <Element Name="fld_name" Class="LabelText" FieldName="name" Label="Name" CssClass="ui-li-heading"/>
        <Element Name="fld_description" Class="LabelText" FieldName="description" Label="Description" CssClass="ui-li-desc"/>
        <Element Name="fld_listlink" Class="LabelText" Label="ListLink" Link="{@home:url}/system/role_detail/{@:Elem[fld_Id].Value}" Text=" " Style="white-space:normal;padding-top:0;padding-bottom:0;" HTMLAttr="rel='external'"/>
    </DataPanel>
    <ActionPanel>
		<Element Name="lnk_new" Class="LabelText" Text="Add" Link="{@home:url}/system/role_new" DataRole="button" HTMLAttr="data-inline='true'">
        </Element>
        <Element Name="btn_delete" Class="Button" Text="Delete" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="del_onclick" Event="onclick" Function="DeleteRecord()"/>
        </Element>
    </ActionPanel> 
    <NavPanel>
        <Element Name="btn_first"  Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="First" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="first_onclick" Event="onclick" Function="GotoPage(1)"/>
        </Element>
        <Element Name="btn_prev" Class="Button" Enabled="{(@:m_CurrentPage == 1)?'N':'Y'}" Text="Prev" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="prev_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage - 1})"/>
        </Element>
        <Element Name="txt_page" Class="LabelText" Text="{'@:m_CurrentPage of @:m_TotalPages '}" Style="font-size:13px;font-weight:bold">
        </Element>
        <Element Name="btn_next" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="Next" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="next_onclick" Event="onclick" Function="GotoPage({@:m_CurrentPage + 1})"/>
        </Element>
        <Element Name="btn_last" Class="Button" Enabled="{(@:m_CurrentPage == @:m_TotalPages )?'N':'Y'}" Text="Last" DataRole="button" HTMLAttr="data-inline='true'">
            <EventHandler Name="last_onclick" Event="onclick" Function="GotoPage({@:m_TotalPages})"/>
        </Element>
    </NavPanel> 
    <SearchPanel>
        <Element Name="qry_name"  Class="InputText" FuzzySearch="Y" FieldName="name" HTMLAttr="type=search" />
        <Element Name="btn_dosearch" Class="Button" text="Go" DataRole="button">
            <EventHandler Name="search_onclick" Event="onclick" Function="RunSearch()"/>
        </Element>
    </SearchPanel>
</EasyForm>
